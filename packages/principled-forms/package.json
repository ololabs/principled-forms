{
  "name": "@olo/principled-forms",
  "version": "0.1.3",
  "description": "Principled form handling in TypeScript.",
  "module": "build/index.js",
  "types": "build/index.d.ts",
  "author": "Chris Krycho",
  "license": "MIT",
  "dependencies": {
    "true-myth": "2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^23.1.0",
    "jest": "23.1.0",
    "prettier-eslint": "8.8.2",
    "rimraf": "2.6.2",
    "shelljs": "^0.8.2",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "18.0.0"
  },
  "main": "ember-addon.js",
  "keywords": [
    "ember-addon"
  ],
  "ember-addon": {
    "main": "ember-addon.js"
  },
  "scripts": {
    "ts:src": "yarn tsc -p tsconfig/build.json --outDir ./dist",
    "ts:typedefs": "yarn tsc -p tsconfig/typedefs.json --outDir .",
    "ts:all": "yarn ts:src && yarn ts:typedefs",
    "clean": "rimraf *.d.ts *.d.ts.map field/*.d.ts field/*.d.ts.map dist",
    "build": "yarn clean && yarn ts:all",
    "prepublishOnly": "yarn build",
    "postpublish": "yarn clean",
    "test": "yarn jest",
    "tdd": "yarn jest --watch"
  },
  "files": [
    "*.d.ts",
    "*.d.ts.map",
    "field/*.d.ts",
    "field/*.d.ts.map",
    "dist"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*"
    ],
    "coveragePathIgnorePatterns": ["src/index.ts"],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "statements": 100,
        "lines": 100
      }
    }
  }
}
