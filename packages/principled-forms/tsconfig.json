{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2017",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,

    "inlineSourceMap": true,
    "inlineSources": true,
  },
  "include": ["src", "tests"]
}